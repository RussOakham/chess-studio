{
  "name": "chess-studio",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.27.0",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "oxlint . && eslint .",
    "lint:fix": "oxlint --fix . && eslint --fix .",
    "lint:md": "markdownlint '**/*.md' --ignore .markdownlintignore",
    "lint:md:fix": "markdownlint '**/*.md' --ignore .markdownlintignore --fix",
    "format": "oxfmt --check . && prettier --check \"**/*.{tsx,jsx}\" --ignore-path .prettierignore",
    "format:fix": "oxfmt . && prettier --write \"**/*.{tsx,jsx}\" --ignore-path .prettierignore",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean",
    "prepare": "husky"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@typescript/native-preview": "7.0.0-dev.20260109.1",
    "eslint": "^9.39.2",
    "eslint-plugin-json": "^4.0.1",
    "eslint-plugin-oxlint": "^1.39.0",
    "eslint-plugin-yml": "^1.19.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint-cli": "^0.47.0",
    "oxfmt": "^0.24.0",
    "oxlint": "^1.39.0",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.7.3",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "engines": {
    "node": ">=24.12.0",
    "pnpm": ">=10.0.0"
  },
  "pnpm": {
    "catalog": {
      "@typescript-eslint/eslint-plugin": "8.52.0",
      "@typescript-eslint/parser": "8.52.0",
      "eslint": "9.39.2",
      "eslint-config-next": "16.1.1",
      "eslint-plugin-react": "7.37.5",
      "eslint-plugin-react-hooks": "7.0.1",
      "eslint-plugin-sonarjs": "^3.0.5",
      "eslint-plugin-unicorn": "^62.0.0",
      "eslint-plugin-jsx-a11y": "^6.10.2",
      "eslint-plugin-json": "^4.0.1",
      "eslint-plugin-yml": "^1.19.1",
      "eslint-config-prettier": "^10.1.8",
      "prettier": "3.7.4",
      "prettier-plugin-tailwindcss": "^0.7.2",
      "typescript": "5.9.3",
      "@typescript/native-preview": "7.0.0-dev.20260109.1",
      "turbo": "2.7.3",
      "husky": "9.1.7",
      "lint-staged": "16.2.7",
      "markdownlint-cli": "0.47.0",
      "@eslint/js": "9.39.2",
      "typescript-eslint": "8.52.0",
      "next": "16.1.1",
      "react": "19.2.3",
      "react-dom": "19.2.3",
      "@types/node": "20.19.27",
      "@types/react": "19.2.7",
      "@types/react-dom": "19.2.3",
      "tailwindcss": "4.1.18",
      "drizzle-orm": "^0.36.4",
      "postgres": "^3.4.5",
      "drizzle-kit": "^0.30.0",
      "clsx": "^2.1.1",
      "tailwind-merge": "^2.5.5",
      "lucide-react": "^0.468.0",
      "@radix-ui/react-slot": "^1.1.1",
      "class-variance-authority": "^0.7.1"
    },
    "overrides": {
      "drizzle-orm": "^0.36.4"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "oxlint --fix",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,yml,yaml}": [
      "eslint --fix"
    ],
    "*.{css,md}": [
      "oxfmt"
    ],
    "*.md": [
      "markdownlint --fix",
      "oxfmt"
    ]
  }
}
