{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "//#lint": {
      "cache": true
    },
    "//#lint:fix": {
      "cache": false
    },
    "//#format": {
      "cache": true
    },
    "//#format:fix": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint", "//#lint"],
      "outputs": [],
      "cache": true
    },
    "lint:fix": {
      "dependsOn": ["^lint:fix", "//#lint:fix"],
      "outputs": [],
      "cache": true
    },
    "type-check": {
      "dependsOn": ["^build", "^type-check"],
      "outputs": [],
      "cache": true
    },
    "format": {
      "dependsOn": ["//#format"],
      "outputs": [],
      "cache": true
    },
    "format:check": {
      "dependsOn": ["//#format"],
      "outputs": [],
      "cache": true
    },
    "clean": {
      "cache": false
    }
  }
}
