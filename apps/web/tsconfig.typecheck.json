{
  "extends": "../../packages/config/typescript/nextjs.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./*"],
      "@repo/types": ["../../packages/types/src/index.ts"],
      "@repo/types/*": ["../../packages/types/src/*"],
      "@repo/chess": ["../../packages/chess/src/index.ts"],
      "@repo/chess/*": ["../../packages/chess/src/*"],
      "@repo/db": ["../../packages/db/src/index.ts"],
      "@repo/db/*": ["../../packages/db/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "**/*.mts"],
  "exclude": ["node_modules", ".next"],
  "references": [
    {
      "path": "../../packages/types"
    },
    {
      "path": "../../packages/chess"
    },
    {
      "path": "../../packages/db"
    }
  ]
}
