{
  "name": "@repo/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "doppler run --project chess-studio --config ${DOPPLER_CONFIG:-dev} -- next dev",
    "build": "doppler run --project chess-studio --config ${DOPPLER_CONFIG:-dev} -- next build",
    "start": "doppler run --project chess-studio --config ${DOPPLER_CONFIG:-dev} -- next start",
    "lint": "eslint .",
    "type-check": "tsgo --noEmit --project tsconfig.typecheck.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "auth:generate": "doppler run --project chess-studio --config ${DOPPLER_CONFIG:-dev} -- pnpm dlx @better-auth/cli@latest generate",
    "setup:stockfish": "./scripts/setup-stockfish.sh",
    "postinstall": "pnpm setup:stockfish",
    "convex:dev": "convex dev",
    "convex:deploy": "convex deploy",
    "convex:codegen": "convex codegen"
